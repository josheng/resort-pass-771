<% search = [] %>
<% if @listing.present? %>
  <% 8.times do |n| %>
    <% search << "https://picsum.photos/1920/1080?#{@listing.name.gsub(" ","-")},#{n}" %>
  <% end %>
  <% else %>
  <% 8.times do |n| %>
    <% term = %w[happy joy play fun].sample%>
    <% size = %w[200x300 200x350 200x325 200x250].sample %>
    <% search << "https://source.unsplash.com/#{size}/?pool,#{term}" %>
  <% end %>
<% end %>

<div class="container-fluid">
    <div id="carouselExample" class="carousel slide show-carousel" data-ride="carousel" data-interval="9000">
        <div class="carousel-inner row w-10 mxauto" role="listbox">
            <div class="carousel-item col-md-4 active">
                <img class="img-fluid mx-1 d-bloc" src=<%= search[0] %> alt="slide 1">
            </div>
            <% 7.times do |n| %>
            <div class="carousel-item col-md-4">
                <img class="img-fluid mx-1 d-block" src=<%= search[n] %> alt="slide <%= n + 1 %>">
            </div>
            <% end %>
        </div>
        <a class="carousel-control-prev control-bg" href="#carouselExample" role="button" data-slide="prev">
            <i class="fa fa-chevron-left fa-lg text-muted"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next control-bg text-faded" href="#carouselExample" role="button" data-slide="next">
            <i class="fa fa-chevron-right fa-lg text-muted"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
